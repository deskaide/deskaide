{
  "name": "deskaide",
  "version": "0.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/deskaide/deskaide.git"
  },
  "keywords": [
    "Pomodoro",
    "remark",
    "CodeMirror",
    "Electron",
    "Vite",
    "TypeScript"
  ],
  "author": "Shahidul Islam Majumder <hello@shahid.pro>",
  "license": "MIT",
  "engines": {
    "node": ">=16.15.0",
    "npm": ">=8.5.5"
  },
  "main": "packages/main/dist/index.cjs",
  "scripts": {
    "clean": "rimraf dist && rimraf packages/main/dist && rimraf packages/preload/dist && rimraf packages/renderer/dist",
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "cd ./packages/main && vite build",
    "build:preload": "cd ./packages/preload && vite build",
    "build:renderer": "cd ./packages/renderer && vite build",
    "compile": "npm run clean && cross-env MODE=production npm run build && electron-builder build --config .electron-builder.config.js --dir --config.asar=false",
    "test": "npm run test:main && npm run test:preload && npm run test:renderer && npm run test:e2e",
    "test:e2e": "npm run build && vitest run",
    "test:main": "vitest run -r packages/main --passWithNoTests",
    "test:preload": "vitest run -r packages/preload --passWithNoTests",
    "test:renderer": "vitest run -r packages/renderer --passWithNoTests",
    "start": "node scripts/watch.mjs",
    "lint": "eslint . --ext js,ts,jsx,tsx --ignore-path .gitignore",
    "lint:fix": "eslint . --ext js,ts,jsx,tsx --fix --ignore-path .gitignore",
    "lint:main": "eslint packages/main --ext js,ts,jsx,tsx",
    "lint:preload": "eslint packages/preload --ext js,ts,jsx,tsx",
    "lint:renderer": "eslint packages/renderer --ext js,ts,jsx,tsx",
    "tsc": "npm run tsc:main && npm run tsc:preload && npm run tsc:renderer",
    "tsc:main": "tsc --noEmit -p packages/main/tsconfig.json",
    "tsc:preload": "tsc --noEmit -p packages/preload/tsconfig.json",
    "tsc:renderer": "tsc --noEmit -p packages/renderer/tsconfig.json",
    "validate": "npm run lint && npm run tsc && npm run test",
    "lint-staged": "lint-staged",
    "postinstall": "cross-env ELECTRON_RUN_AS_NODE=1 electron scripts/update-electron-vendors.mjs",
    "commit": "cz",
    "release": "electron-builder --config .electron-builder.config.js --publish always",
    "release:dry": "semantic-release --dry-run",
    "updateVersion": "semantic-release"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.2",
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^8.0.7",
    "@semantic-release/npm": "^9.0.1",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "@types/electron-devtools-installer": "^2.2.2",
    "@types/pouchdb": "^6.4.0",
    "@types/react": "^18.0.26",
    "@types/react-calendar": "^3.9.0",
    "@types/react-dom": "^18.0.10",
    "@types/react-router-dom": "^5.3.3",
    "@types/styled-components": "^5.1.26",
    "@types/styled-system": "^5.1.15",
    "@types/yup": "^0.29.14",
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "@typescript-eslint/parser": "^5.47.0",
    "@vitejs/plugin-react": "^3.0.0",
    "cross-env": "7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^16.0.3",
    "electron": "^22.0.0",
    "electron-builder": "^23.6.0",
    "electron-devtools-installer": "3.2.0",
    "electron-devtools-vendor": "^1.2.0",
    "electron-notarize": "^1.2.2",
    "eslint": "^8.30.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^4.6.0",
    "happy-dom": "^8.1.1",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "playwright": "1.29.1",
    "prettier": "^2.8.1",
    "rimraf": "^3.0.2",
    "sass": "^1.57.1",
    "semantic-release": "^19.0.5",
    "semantic-release-export-data": "^1.0.1",
    "typescript": "4.9.4",
    "unplugin-auto-expose": "^0.0.4",
    "vite": "^4.0.3",
    "vitest": "^0.26.2"
  },
  "dependencies": {
    "@codemirror/autocomplete": "^6.4.0",
    "@codemirror/commands": "^6.1.2",
    "@codemirror/highlight": "^0.19.8",
    "@codemirror/lang-markdown": "^6.0.5",
    "@codemirror/language": "^6.3.2",
    "@codemirror/language-data": "^6.1.0",
    "@codemirror/lint": "^6.1.0",
    "@codemirror/search": "^6.2.3",
    "@codemirror/state": "^6.1.4",
    "@codemirror/theme-one-dark": "^6.1.0",
    "@codemirror/view": "^6.7.1",
    "@lezer/highlight": "^1.1.3",
    "@lezer/markdown": "^1.0.2",
    "@reduxjs/toolkit": "^1.9.1",
    "@styled-icons/boxicons-regular": "^10.47.0",
    "assert": "^2.0.0",
    "date-fns": "^2.29.3",
    "electron-updater": "^5.3.0",
    "formik": "^2.2.9",
    "github-markdown-css": "^5.1.0",
    "pouchdb": "^8.0.0",
    "prism-themes": "^1.9.0",
    "prismjs": "^1.29.0",
    "process": "^0.11.10",
    "react": "^18.2.0",
    "react-calendar": "^4.0.0",
    "react-dom": "^18.2.0",
    "react-helmet-async": "^1.3.0",
    "react-redux": "^8.0.5",
    "react-router-dom": "^6.6.1",
    "reading-time": "^2.0.0-1",
    "rehype-format": "^4.0.1",
    "rehype-prism-plus": "^1.5.0",
    "rehype-raw": "^6.1.1",
    "rehype-react": "^7.1.1",
    "rehype-rewrite": "^3.0.6",
    "rehype-stringify": "^9.0.3",
    "remark-gfm": "^3.0.1",
    "remark-parse": "^10.0.1",
    "remark-react": "^9.0.1",
    "remark-rehype": "^10.1.0",
    "remark-stringify": "^10.0.2",
    "styled-components": "^5.3.6",
    "styled-system": "^5.1.5",
    "unified": "^10.1.2",
    "yup": "^0.32.11"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
