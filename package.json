{
  "name": "deskaide",
  "version": "1.0.0",
  "private": true,
  "main": "public/electron.js",
  "homepage": "./",
  "license": "MIT",
  "url": "https://github.com/deskaide/deskaide",
  "email": "hello@shahid.pro",
  "author": "Shahidul Islam Majumder <hello@shahid.pro> (https://shahid.pro/)",
  "description": "An open source application to check your desk (Computer) usage.",
  "productName": "Deskaide",
  "scripts": {
    "start": "concurrently 'BROWSER=none npm run react-start' 'wait-on http://localhost:3000/ && npm run electron-start'",
    "start:win": "concurrently \"npm run react-start\" \"wait-on http://localhost:3000/ && npm run electron-start:win\"",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-start": "electron --disable-gpu .",
    "electron-start:win": ".\\node_modules\\electron\\dist\\electron.exe .",
    "react-start": "react-scripts start",
    "premake": "npm run build",
    "premake:all": "npm run build",
    "make": "electron-builder --x64 -c.extraMetadata.main=build/electron.js",
    "make:all": "electron-builder -mwl --x64 -c.extraMetadata.main=build/electron.js"
  },
  "build": {
    "appId": "app.deskaide.www",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "public/assets"
    },
    "linux": {
      "category": "Utility",
      "target": [
        "deb",
        "AppImage"
      ]
    },
    "win": {
      "icon": "assets/icons/icon.ico",
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "assets/icons/icon.icns",
      "target": [
        "dmg"
      ]
    }
  },
  "dependencies": {
    "auto-launch": "^5.0.5",
    "electron-is-dev": "^1.2.0",
    "formik": "^2.2.6",
    "history": "^5.0.0",
    "i18next": "^19.8.4",
    "i18next-browser-languagedetector": "^6.0.1",
    "i18next-xhr-backend": "^3.2.2",
    "pouchdb-adapter-http": "^7.2.2",
    "pouchdb-adapter-idb": "^7.2.2",
    "pouchdb-adapter-leveldb": "^7.2.2",
    "pouchdb-adapter-memory": "^7.2.2",
    "pouchdb-core": "^7.2.2",
    "pouchdb-find": "^7.2.2",
    "pouchdb-mapreduce": "^7.2.2",
    "pouchdb-replication": "^7.2.2",
    "react": "^17.0.1",
    "react-countdown-now": "^2.1.2",
    "react-dom": "^17.0.1",
    "react-i18next": "^11.8.4",
    "react-redux": "^7.2.2",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^4.0.1",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0",
    "shortid": "^2.2.16",
    "styled-components": "^5.2.1",
    "styled-system": "^5.1.5",
    "url-metadata": "^2.5.0",
    "yup": "^0.32.8"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "concurrently": "^5.3.0",
    "electron": "^11.2.0",
    "electron-builder": "^22.9.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.5",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-node": "^4.1.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.3.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "prettier": "^2.2.1",
    "redux-devtools-extension": "^2.13.8",
    "wait-on": "^5.2.0"
  },
  "iohook": {
    "targets": [
      "node-72",
      "electron-85"
    ],
    "platforms": [
      "win32",
      "darwin",
      "linux"
    ],
    "arches": [
      "x64"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
