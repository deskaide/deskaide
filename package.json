{
  "name": "deskaide",
  "version": "0.1.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/deskaide/deskaide.git"
  },
  "keywords": [
    "Pomodoro",
    "remark",
    "CodeMirror",
    "Electron",
    "Vite",
    "TypeScript"
  ],
  "author": "Shahidul Islam Majumder <hello@shahid.pro>",
  "license": "MIT",
  "engines": {
    "node": ">=16.15.0",
    "npm": ">=8.5.5"
  },
  "main": "packages/main/dist/index.cjs",
  "scripts": {
    "clean": "rimraf dist && rimraf packages/main/dist && rimraf packages/preload/dist && rimraf packages/renderer/dist",
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "cd ./packages/main && vite build",
    "build:preload": "cd ./packages/preload && vite build",
    "build:renderer": "cd ./packages/renderer && vite build",
    "compile": "npm run clean && cross-env MODE=production npm run build && electron-builder build --config .electron-builder.config.js --dir --config.asar=false",
    "test": "npm run test:main && npm run test:preload && npm run test:renderer && npm run test:e2e",
    "test:e2e": "npm run build && vitest run",
    "test:main": "vitest run -r packages/main --passWithNoTests",
    "test:preload": "vitest run -r packages/preload --passWithNoTests",
    "test:renderer": "vitest run -r packages/renderer --passWithNoTests",
    "start": "node scripts/watch.js",
    "lint": "eslint . --ext js,ts,jsx,tsx --ignore-path .gitignore",
    "lint:fix": "eslint . --ext js,ts,jsx,tsx --fix --ignore-path .gitignore",
    "lint:main": "eslint packages/main --ext js,ts,jsx,tsx",
    "lint:preload": "eslint packages/preload --ext js,ts,jsx,tsx",
    "lint:renderer": "eslint packages/renderer --ext js,ts,jsx,tsx",
    "tsc": "npm run tsc:main && npm run tsc:preload && npm run tsc:renderer",
    "tsc:main": "tsc --noEmit -p packages/main/tsconfig.json",
    "tsc:preload": "tsc --noEmit -p packages/preload/tsconfig.json",
    "tsc:renderer": "tsc --noEmit -p packages/renderer/tsconfig.json",
    "validate": "npm run lint && npm run tsc && npm run test",
    "lint-staged": "lint-staged"
  },
  "devDependencies": {
    "@types/electron-devtools-installer": "^2.2.2",
    "@types/react": "^18.0.14",
    "@types/react-dom": "^18.0.5",
    "@types/react-router-dom": "^5.3.3",
    "@types/styled-components": "^5.1.25",
    "@types/styled-system": "^5.1.15",
    "@types/yup": "^0.29.14",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "@vitejs/plugin-react": "^1.3.2",
    "cross-env": "7.0.3",
    "electron": "^19.0.4",
    "electron-builder": "^23.0.3",
    "electron-builder-notarize": "^1.5.0",
    "electron-devtools-installer": "3.2.0",
    "eslint": "^8.18.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "happy-dom": "^5.3.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.2",
    "playwright": "1.22.2",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "sass": "^1.52.3",
    "typescript": "4.7.4",
    "vite": "^2.9.12",
    "vitest": "^0.15.1"
  },
  "dependencies": {
    "@codemirror/autocomplete": "^6.0.2",
    "@codemirror/commands": "^6.0.0",
    "@codemirror/highlight": "^0.19.8",
    "@codemirror/lang-markdown": "^6.0.0",
    "@codemirror/language": "^6.0.0",
    "@codemirror/language-data": "^6.1.0",
    "@codemirror/lint": "^6.0.0",
    "@codemirror/search": "^6.0.0",
    "@codemirror/state": "^6.0.1",
    "@codemirror/theme-one-dark": "^0.19.1",
    "@codemirror/view": "^6.0.1",
    "@lezer/highlight": "^1.0.0",
    "@reduxjs/toolkit": "^1.8.2",
    "@styled-icons/boxicons-regular": "^10.38.0",
    "assert": "^2.0.0",
    "electron-updater": "^5.0.1",
    "formik": "^2.2.9",
    "github-markdown-css": "^5.1.0",
    "hast-util-sanitize": "^4.0.0",
    "process": "^0.11.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-helmet-async": "^1.3.0",
    "react-redux": "^8.0.2",
    "react-router-dom": "^6.3.0",
    "rehype-react": "^7.1.1",
    "remark-gfm": "^3.0.1",
    "remark-parse": "^10.0.1",
    "remark-react": "^9.0.1",
    "remark-rehype": "^10.1.0",
    "styled-components": "^5.3.5",
    "styled-system": "^5.1.5",
    "uiohook-napi": "^1.2.0",
    "unified": "^10.1.2",
    "yup": "^0.32.11"
  }
}
