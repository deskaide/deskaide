{
  "name": "deskaide",
  "version": "0.1.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/deskaide/deskaide.git"
  },
  "keywords": [
    "Pomodoro",
    "remark",
    "CodeMirror",
    "Electron",
    "Vite",
    "TypeScript"
  ],
  "author": "Shahidul Islam Majumder <hello@shahid.pro>",
  "license": "MIT",
  "engines": {
    "node": ">=v14.16",
    "npm": ">=7.7"
  },
  "main": "packages/main/dist/index.cjs",
  "scripts": {
    "buildEnvTypes": "node scripts/buildEnvTypes.js",
    "build": "node scripts/build.js",
    "precompile": "cross-env MODE=production npm run build",
    "compile": "electron-builder --x64",
    "test": "npm run test:main",
    "pretest:main": "cross-env MODE=test npm run build",
    "test:main": "node tests/app.spec.js",
    "test:renderer": "vite-jest",
    "dev": "node scripts/watch.js",
    "lint": "eslint --ignore-path .gitignore --ext .js,.ts,.tsx .",
    "prettier": "prettier --ignore-path .gitignore \"**/*.+(js|jsx|json|ts|tsx)\"",
    "format": "npm run prettier -- --write",
    "check-format": "npm run prettier -- --list-different",
    "pretypecheck": "npm run buildEnvTypes",
    "typecheck-main": "tsc --noEmit -p packages/main/tsconfig.json",
    "typecheck-preload": "tsc --noEmit -p packages/preload/tsconfig.json",
    "typecheck-renderer": "tsc --noEmit -p packages/renderer/tsconfig.json",
    "typecheck": "npm run typecheck-main && npm run typecheck-preload && npm run typecheck-renderer",
    "prevalidate": "npm run test",
    "lint-staged": "lint-staged",
    "validate": "npm-run-all --parallel typecheck check-format lint",
    "prepare": "husky install"
  },
  "build": {
    "extraMetadata": {
      "name": "deskaide",
      "productName": "Deskaide",
      "homepage": "https://www.deskaide.app",
      "description": "An open source application to help managing your desk (Computer) usage."
    },
    "appId": "app.deskaide.www",
    "files": [
      "packages/**/dist/**",
      "assets/icons"
    ],
    "extends": null,
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "linux": {
      "category": "Utility",
      "target": [
        "deb",
        "AppImage"
      ]
    },
    "win": {
      "icon": "assets/icons/icon.ico",
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "assets/icons/icon.icns",
      "target": [
        "dmg"
      ]
    }
  },
  "browserslist": [
    "Chrome 94"
  ],
  "devDependencies": {
    "@testing-library/jest-dom": "^5.15.0",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/react": "^17.0.30",
    "@types/react-dom": "^17.0.10",
    "@types/react-router-dom": "^5.3.1",
    "@types/styled-components": "^5.1.15",
    "@types/styled-system": "^5.1.13",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "cross-env": "^7.0.3",
    "electron": "^15.2.0",
    "electron-builder": "^22.13.1",
    "electron-devtools-installer": "^3.2.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.2",
    "jest": "^27.3.1",
    "jest-environment-jsdom": "^27.3.1",
    "lint-staged": "^11.2.3",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.15.2",
    "prettier": "^2.4.1",
    "typescript": "^4.4.4",
    "vite": "^2.6.10",
    "vite-jest": "^0.0.4"
  },
  "dependencies": {
    "@codemirror/commands": "^0.19.5",
    "@codemirror/gutter": "^0.19.2",
    "@codemirror/highlight": "^0.19.6",
    "@codemirror/history": "^0.19.0",
    "@codemirror/lang-javascript": "^0.19.2",
    "@codemirror/lang-markdown": "^0.19.2",
    "@codemirror/language": "^0.19.3",
    "@codemirror/language-data": "^0.19.1",
    "@codemirror/matchbrackets": "^0.19.3",
    "@codemirror/state": "^0.19.2",
    "@codemirror/theme-one-dark": "^0.19.0",
    "@reduxjs/toolkit": "^1.6.2",
    "@styled-icons/boxicons-regular": "^10.38.0",
    "assert": "^2.0.0",
    "electron-updater": "^4.4.4",
    "github-markdown-css": "^5.0.0",
    "process": "^0.11.10",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-helmet-async": "^1.1.2",
    "react-router-dom": "^5.3.0",
    "remark-gfm": "^3.0.0",
    "remark-parse": "^10.0.0",
    "remark-react": "^9.0.1",
    "styled-components": "^5.3.3",
    "styled-system": "^5.1.5",
    "unified": "^10.1.0"
  }
}
