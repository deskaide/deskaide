{
  "name": "deskaide",
  "version": "0.1.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/deskaide/deskaide.git"
  },
  "keywords": [
    "Pomodoro",
    "remark",
    "CodeMirror",
    "Electron",
    "Vite",
    "TypeScript"
  ],
  "author": "Shahidul Islam Majumder <hello@shahid.pro>",
  "license": "MIT",
  "engines": {
    "node": ">=v14.16",
    "npm": ">=7.7"
  },
  "main": "packages/main/dist/index.cjs",
  "scripts": {
    "buildEnvTypes": "node scripts/buildEnvTypes.js",
    "build": "node scripts/build.js",
    "precompile": "cross-env MODE=production npm run build",
    "compile": "electron-builder --x64",
    "test": "npm run test:main && npm run test:renderer",
    "pretest:main": "cross-env MODE=test npm run build",
    "test:main": "node tests/app.spec.js",
    "test:renderer": "jest packages/renderer",
    "start": "node scripts/watch.js",
    "lint": "eslint --ignore-path .gitignore --ext .js,.ts,.tsx .",
    "prettier": "prettier --ignore-path .gitignore \"**/*.+(js|jsx|json|ts|tsx)\"",
    "format": "npm run prettier -- --write",
    "check-format": "npm run prettier -- --list-different",
    "pretypecheck": "npm run buildEnvTypes",
    "typecheck-main": "tsc --noEmit -p packages/main/tsconfig.json",
    "typecheck-preload": "tsc --noEmit -p packages/preload/tsconfig.json",
    "typecheck-renderer": "tsc --noEmit -p packages/renderer/tsconfig.json",
    "typecheck": "npm run typecheck-main && npm run typecheck-preload && npm run typecheck-renderer",
    "prevalidate": "npm run test",
    "lint-staged": "lint-staged",
    "validate": "npm-run-all --parallel typecheck check-format lint",
    "prepare": "husky install"
  },
  "build": {
    "extraMetadata": {
      "name": "deskaide",
      "productName": "Deskaide",
      "homepage": "https://www.deskaide.app",
      "description": "An open source application to help managing your desk (Computer) usage."
    },
    "appId": "app.deskaide.www",
    "files": [
      "packages/**/dist/**",
      "assets/**"
    ],
    "extends": null,
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "linux": {
      "category": "Utility",
      "target": [
        "deb",
        "AppImage"
      ]
    },
    "win": {
      "icon": "assets/icons/icon.ico",
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "assets/icons/icon.icns",
      "target": [
        "dmg"
      ]
    }
  },
  "browserslist": [
    "Chrome 94"
  ],
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.17.9",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.3",
    "@testing-library/user-event": "^13.5.0",
    "@types/electron-devtools-installer": "^2.2.1",
    "@types/jest": "^27.4.1",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.12",
    "@types/react-router-dom": "^5.3.3",
    "@types/styled-components": "^5.1.24",
    "@types/styled-system": "^5.1.15",
    "@types/yup": "^0.29.13",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "babel-jest": "^28.0.3",
    "cross-env": "^7.0.3",
    "electron": "^17.1.0",
    "electron-builder": "^22.14.13",
    "electron-devtools-installer": "^3.2.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-jest-dom": "^4.0.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-testing-library": "^5.0.5",
    "husky": "^7.0.4",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.5.1",
    "jest-environment-jsdom": "^27.5.1",
    "lint-staged": "^12.3.4",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.19.2",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.4",
    "typescript": "^4.6.2",
    "vite": "^2.8.6"
  },
  "dependencies": {
    "@codemirror/commands": "^0.19.8",
    "@codemirror/gutter": "^0.19.9",
    "@codemirror/highlight": "^0.19.8",
    "@codemirror/history": "^0.19.2",
    "@codemirror/lang-javascript": "^0.19.7",
    "@codemirror/lang-markdown": "^0.19.6",
    "@codemirror/language": "^0.19.10",
    "@codemirror/language-data": "^0.19.2",
    "@codemirror/matchbrackets": "^0.19.4",
    "@codemirror/state": "^0.19.9",
    "@codemirror/theme-one-dark": "^0.19.1",
    "@reduxjs/toolkit": "^1.8.2",
    "@styled-icons/boxicons-regular": "^10.38.0",
    "assert": "^2.0.0",
    "electron-updater": "^4.6.5",
    "formik": "^2.2.9",
    "github-markdown-css": "^5.1.0",
    "hast-util-sanitize": "^4.0.0",
    "process": "^0.11.10",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-helmet-async": "^1.2.3",
    "react-redux": "^8.0.2",
    "react-router-dom": "^6.2.2",
    "remark-gfm": "^3.0.1",
    "remark-parse": "^10.0.1",
    "remark-react": "^9.0.1",
    "styled-components": "^5.3.3",
    "styled-system": "^5.1.5",
    "unified": "^10.1.2",
    "yup": "^0.32.11"
  }
}
